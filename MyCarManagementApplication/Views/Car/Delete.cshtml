@model MyCarManagementApplication.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<h2>Delete Car</h2>

<h3>Are you sure you want to delete this car?</h3>
<div>
    <h4>Car Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Make</dt>
        <dd class="col-sm-10">@Model.Make</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

