<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyCarManagementApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyCarManagementApplication.styles.css" asp-append-version="true" />
    <style>
        .card-img-top {
            width: 100%;
            max-height: 200px;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .form-control-file {
            margin-top: 10px;
        }

        body.bg-dark .navbar,
        body.bg-dark .footer {
            background-color: #333 !important;
            color: white !important;
        }

        body.bg-dark .dropdown-menu {
            background-color: #444;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/Images/Logo.png" alt="Logo" style="width: 60px; height: auto; margin-right: 15px;">
                    <span style="font-size: 1.5rem; font-weight: bold;">MyCarManagementApp</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">

                    <div class="dropdown">
                        <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false" style="font-size: 1rem;">
                            Account
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                            <li><a class="dropdown-item" href="/Account/Login">Login</a></li>
                            <li><a class="dropdown-item" href="/Account/Register">Sign Up</a></li>
                        </ul>
                    </div>

                    <button class="btn btn-outline-dark btn-sm mx-2" id="themeToggle" style="font-size: 1rem;">Dark Mode</button>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center py-3">
        <div class="container">
            &copy; 2024 - MyCarManagementApplication
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const themeToggle = document.getElementById('themeToggle');
        themeToggle.addEventListener('click', () => {
            document.body.classList.toggle('bg-dark');
            document.body.classList.toggle('text-light');
            themeToggle.textContent = document.body.classList.contains('bg-dark') ? 'Light Mode' : 'Dark Mode';
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
